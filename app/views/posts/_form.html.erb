<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		
		<h2> Errors </h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title%><br>

	<%= f.label :body %><br>
	<%= f.text_area :body %><br>

	<%= f.submit %>
<% end %> 